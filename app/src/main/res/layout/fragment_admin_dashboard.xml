<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AdminDashboardFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_baseline_person_24"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="0.3">
            <TextView
                android:id="@+id/textView_welcomeAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome, Admin"
                android:textSize="26sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hai, apa kabar hari ini?"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/btnMoreAdminHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_menu_24"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berita"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView_jumCust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Ada x Customer yang sudah terdaftar di MyItem" />

        <TextView
            android:id="@+id/textView_jumSeller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Ada x Seller yang sudah terdaftar di MyItem" />
        <TextView
            android:id="@+id/textView_jumTopUpBaru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ada n Top Up yang belum dikonfirmasi!"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/textView_jumWithdrawBaru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ada n Withdraw yang belum dikonfirmasi!"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
</LinearLayout>